{
  // Comments are stripped from this file before parsing as JSON
  "portability" : {
    "default" : {
      "home" : "HOME"
    },
    "linux/windows" : {
      "home" : "USERPROFILE",
      "path_regex" : [ {"from":"^/mnt"} ]
    },
    "windows" : {
      "home" : "USERPROFILE",
      "path_regex" : [
        { "from" : "^([A-Za-z]):", 
          "to" : "/$1",
          "flags" : "lower" },
        { "from": "\\\\",
          "to": "/",
          "flags": "all" }],
      "executable_suffix" : ".exe"
    }
  },
  "containers" : {
    "ruby" : {
      "commands" : [
        "bundle",
        "ruby",
        "irb"
      ],
      "volumes" : [
        // Store bundles separately by ruby version
        "$HOME/.local/ruby/${container_version}/bundle:/usr/local/bundle"
      ]
    },
    "python" : {
      "commands" :[
        "python3",
        "pip3",
        "python",
        "pip",
        "easy_install"
      ],
      "volumes" :[
        // pip --user installs go here.
        "$HOME/.local/python/${container_version}:/root/.local"
      ]
    },
    "golang" : {
      "commands" : [
        "go",
      	"go-outline",
      	"go-symbols",
       	"gocode",
      	"godef",
        "godoc",
        "gofmt",
        "golint",
      	"gomodifytags",
        "gopkgs",
      	"gorename",
        "goreturns",
      	"guru"
      ]
    }
  }
}
